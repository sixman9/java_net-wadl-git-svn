<project>
    <build>
        <plugins>
            <plugin>
                <artifactId>wadl-maven-plugin</artifactId>
                <configuration>
                    <targetDirectory>${basedir}/target/test-harness/valid-wadl-with-customizations/generated-sources/wadl</targetDirectory>
                    <sourceDirectory>${basedir}/src/test/resources/valid-wadl-with-customizations</sourceDirectory>
                    <packageName>test</packageName>
                    <includes>*.wadl</includes>
                    <customizations>
                      <customization>${basedir}/src/test/resources/valid-wadl-with-customizations/binding.xjb</customization>
                    </customizations>
                    <autoPackaging>true</autoPackaging>
                    <failOnError>false</failOnError>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>