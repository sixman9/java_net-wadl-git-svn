<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>samples/share</outputDirectory>
            <includes>
                <include>*.wadl</include>
                <include>*.xsd</include>
                <include>*.xjb</include>
            </includes>
        </fileSet>
        <filesSet>
            <directory>src/main/resources</directory>
            <outputDirectory>samples/share/build.xml</outputDirectory>
            <includes>
                <include>build.xml</include>
            </includes>
        </filesSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>